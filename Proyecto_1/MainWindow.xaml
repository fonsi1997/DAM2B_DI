        <TextBox x:Name="txtPropietario" HorizontalAlignment="Left" Height="28" Margin="383,170,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="134" TextChanged="txtPropietario_TextChanged" Grid.Column="1"/>
