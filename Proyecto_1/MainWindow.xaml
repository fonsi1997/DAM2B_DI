        <Label x:Name="lblPais" Content="País" HorizontalAlignment="Left" Margin="568,104,0,0" VerticalAlignment="Top" Grid.Column="1" Height="26" Width="30"/>
        <Label x:Name="lblTitulo" Content="Completar el siguiente formulario" HorizontalAlignment="Left" Margin="2,0,0,0" VerticalAlignment="Top" FontWeight="Bold" Grid.Column="1" Height="26" Width="201"/>
