        <Label x:Name="lblCvv2" Content="cvv2" HorizontalAlignment="Left" Margin="320,239,0,0" VerticalAlignment="Top" Grid.Column="1" Height="26" Width="34"/>
        <Label x:Name="lblFechaExpiracion" Content="Fecha Expiración" HorizontalAlignment="Left" Margin="256,132,0,0" VerticalAlignment="Top" Grid.Column="1" Height="26" Width="98"/>
        <Label x:Name="lblDireccionFacturacion" Content="Dirección de Facturación" Margin="564,49,10,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold" Grid.Column="1" Height="29"/>
