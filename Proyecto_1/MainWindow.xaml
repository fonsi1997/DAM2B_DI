        <TextBox x:Name="txtProvincia" HorizontalAlignment="Left" Height="28" Margin="618,172,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="134" Grid.Column="1"/>
        <TextBox x:Name="txtCP" HorizontalAlignment="Left" Height="28" Margin="618,239,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="134" Grid.Column="1"/>
